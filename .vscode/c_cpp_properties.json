{
  "version": 4,
  "env": {
    "myIncludePath": [
      "${workspaceFolder}/include",
      "${workspaceFolder}/src"
    ],
    "myDefines": [
      "DEBUG"
    ]
  },
  "configurations": [
    {
      "name": "Linux",
      "compilerPath": "/usr/bin/gcc",
      "intelliSenseMode": "linux-gcc-x86",
      "includePath": [
        "${myIncludePath}",
        "/usr/include",
        "/usr/include/SDL"
      ],
      "defines": [
        "${myDefines}",
        "PLATFORM=X11",
        "BACKEND=PGE"
      ],
      "cStandard": "gnu11",
      "cppStandard": "gnu++17",
      "browse": {
        "path": [
          "${myIncludePath}",
          "/usr/include"
        ],
        "limitSymbolsToIncludedHeaders": true,
        "databaseFilename": "${workspaceFolder}/.vscode/browse.vc.db"
      }
    },
    {
      "name": "MINGW",
      "includePath": [
        "${myIncludePath}",
        "/usr/i686-w64-mingw32/include"
      ],
      "defines": [
        "_DEBUG",
        "UNICODE",
        "_UNICODE"
      ]
    }
  ]
}