{
    "version": 4,
    "configurations": [
        {
            "name": "Linux",
            "compilerPath": "/usr/bin/g++",
            "intelliSenseMode": "linux-clang-x64",
            "includePath": [
                "${workspaceFolder}/src/**",
                "${workspaceFolder}/lib/drzengine/include",
                "${workspaceFolder}/include"
            ],
            "defines": [
                "_DEBUG"
            ],
            "cStandard": "c99",
            "cppStandard": "c++17",
            "browse": {
                "path": [
                    "include",
                    "/usr/include"
                ],
                "limitSymbolsToIncludedHeaders": true
            }
        },
        {
            "name": "MINGW",
            "includePath": [
                "${workspaceFolder}/**",
                "/usr/i686-w64-mingw32/include"
            ],
            "defines": [
                "_WIN32",
                "__MINGW32__",
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ]
        }
    ]
}